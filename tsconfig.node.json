{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "vueless.config.*",
    ".vueless/**/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "noEmit": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "moduleResolution": "Bundler",

    /* Custom types. */
    "types": [
      "node",
    ]
  },

}
